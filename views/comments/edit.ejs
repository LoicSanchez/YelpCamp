<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Edit comment for <%=campground.name%></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group"><input type="text" name="comment[text]" class="form-control" value="<%=comment.text%>"></div>
            <div class="form-group"><button class="btn btn-primary btn-block">Submit</button></div>
        </form>
        <a href="/campgrounds">Back to campgrounds list</a>
    </div>
</div>
<% include ../partials/footer %>