<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Login Form</h1>
    <div style="width: 40%; margin: 30px auto;">
        <form action="/login" method="POST">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="username">Username</label>
                <div class="col-sm-9"><input type="text" name="username" autofocus placeholder="Username" class="form-control"></div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="password">Password</label>
                <div class="col-sm-9"><input type="password" name="password" placeholder="Password" class="form-control"></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                    <button class="btn btn-primary btn-block">Login</button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                    <a href="/forgot">Forgot password?</a>
                </div>
            </div>
        </form>
    <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>