<% include ../partials/header %>
<div class="container">
	<h1 style="text-align: center;">Reset Password</h1>
	<div style="width: 40%; margin: 30px auto;">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="password">New password</label>
                <div class="col-sm-9"><input type="password" name="password" value="" placeholder="New password" autofocus class="form-control"/></div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="confirm">Confirm password</label>
                <div class="col-sm-9"><input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9"><button type="submit" class="btn btn-primary">Update Password</button></div>
            </div>
        </form>
	</div>
</div>
<% include ../partials/footer %>