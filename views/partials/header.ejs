<!DOCTYPE html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/"><i class="fas fa-campground "></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNav">
              <ul class="nav navbar-nav mr-auto">
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a class="nav-link" href="/campgrounds">Home</a></li>
              </ul>
              <span>
                <ul class="nav navbar-nav justify-content-end">
                    <%if (!currentUser){%>
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login" class="nav-link">Login</a></li>
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register" class="nav-link">Sign Up</a></li>
                    <%} else {%>
                        <li class="nav-item nav-link">Signed in as <%=currentUser.username%> <%= currentUser.isAdmin ? ' [ADMIN]' : '' %></li>
                        <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
                    <%}%>
                </ul>
              </span>
            </div>
        </nav>
        <div class="container">
            <%if (error && error.length>0) {%>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <%}%>
            <%if (success && success.length>0) {%>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <%}%>
        </div>