<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Create a new campground</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group"><input type="text" placeholder="Name" name="campground[name]" class="form-control"></div>
            <div class="form-group"><input type="text" placeholder="Image url" name="campground[image]" class="form-control"></div>
            <div class="form-group"><input type="text" placeholder="Description" name="campground[description]" class="form-control"></div>
            <div class="form-group"><input type="number" placeholder="Price in $" name="campground[price]" class="form-control" min="0.00" step="0.05"></div>
            <div class="form-group"><button class="btn btn-primary btn-block">Submit</button></div>
        </form>
        <a href="/campgrounds">Back to campgrounds list</a>
    </div>
</div>
<% include ../partials/footer %>