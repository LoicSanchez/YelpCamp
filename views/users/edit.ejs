<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Edit <%=user.username%></h1>
    <div class="row justify-content-center">
        <div class="col mx-5">
            <form action="/users/<%=user._id%>?_method=PUT" method="POST">
                <div class="form-group row">
                    <label  for="username">Username</label>
                    <input type="text" name="username" autofocus class="form-control" value="<%=user.username%>">
                    <small id="usernameHelp" class="form-text text-muted">Username will be shown for posts and comments you create.</small>
                </div>
                <div class="form-group row">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" value="<%=user.email%>">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else. Email is used to reset your password.</small>
                </div>
                <div class="form-group row">
                    <div class="col pr-1 pl-0">
                        <label for="firstName">First name</label>
                        <input type="text" name="firstName" placeholder="First name" class="form-control" value="<%=user.firstName%>">
                    </div>
                    <div class="col pr-0 pl-0">
                        <label for="lastName">Last name</label>
                        <input type="text" name="lastName" placeholder="Last name" class="form-control" value="<%=user.lastName%>">
                    </div>
                </div>
                <div class="form-group row">
                    <button class="btn btn-primary btn-block">Update</button>
                </div>
                <div class="form-group row">
                    <a href="/forgot">Reset password</a>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>